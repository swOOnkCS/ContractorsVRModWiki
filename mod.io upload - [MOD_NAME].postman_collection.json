		{
			"name": "GetModMetadata",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"pm.collectionVariables.set(\"last_mod_fulldata\", JSON.stringify(jsonData)) \r",
							"pm.collectionVariables.set(\"last_mod_metadata\", jsonData.metadata_blob);\r",
							"var new_md = jsonData.metadata_blob\r",
							"// replace server file id\r",
							"var rgx = /serverFileId\\\\\":\\s\\d+/\r",
							"new_md = new_md.replace(rgx, 'serverFileId\\\\\": '+pm.collectionVariables.get(\"last_server_fileid\"))\r",
							"\r",
							"// replace windows file id\r",
							"rgx = /windowsFileId\\\\\":\\s\\d+/\r",
							"new_md = new_md.replace(rgx, 'windowsFileId\\\\\": '+pm.collectionVariables.get(\"last_windows_fileid\"))\r",
							"\r",
							"// replace android file id\r",
							"rgx = /androidFileId\\\\\":\\s\\d+/\r",
							"new_md = new_md.replace(rgx, 'androidFileId\\\\\": '+pm.collectionVariables.get(\"last_android_fileid\"))\r",
							"\r",
							"//save environment variable with new metadata\r",
							"pm.collectionVariables.set(\"new_mod_metadata\", new_md) \r",
							"\r",
							"pm.test(\"Retrieved mod metadata\",function (){\r",
							"    return pm.collectionVariables.get(\"new_mod_metadata\") !== \"\"\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
